<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:name=".RetenTienda"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher2_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RetenTienda"
        tools:targetApi="31">
        <activity
            android:name=".ActivityDeficit"
            android:exported="false"
            android:configChanges="screenSize|orientation"
            android:windowSoftInputMode="adjustNothing"/>
        <activity
            android:name=".ActivityStore"
            android:exported="false"
            android:configChanges="screenSize|orientation"
            android:windowSoftInputMode="adjustNothing"/>
        <activity
            android:name=".ActivitySettings"
            android:exported="false"
            android:configChanges="screenSize|orientation"
            android:windowSoftInputMode="adjustNothing"/>
        <activity
            android:name=".ActivityEditProduct"
            android:exported="false"
            android:configChanges="screenSize|orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ActivityNewProduct"
            android:exported="false"
            android:configChanges="screenSize|orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ActivityAboutDev"
            android:exported="false" />
        <activity
            android:name=".ActivityAboutUs"
            android:exported="false" />
        <activity
            android:name=".ActivityHome"
            android:exported="false"
            android:configChanges="screenSize|orientation"
            android:windowSoftInputMode="adjustNothing"/>
        <activity
            android:name=".ActivityLogin"
            android:exported="false"
            android:configChanges="screenSize|orientation"
            android:windowSoftInputMode="adjustNothing"/>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
    </application>

</manifest>